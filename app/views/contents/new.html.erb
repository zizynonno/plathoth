<h1>メディア投稿</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@content) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, placeholder: "タイトルを入力", class: 'form-control' %>

      <%= f.label :summary %>
      <%= f.text_area :summary,  placeholder: "概要欄を入力", class: 'form-control' %>

      <%= f.label :media %>
      <%= f.file_field :media, class: 'form-control' %>

      <%= f.submit "投稿する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>